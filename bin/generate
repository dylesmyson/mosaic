#!/usr/bin/env python3



import yaml

from lib import *
from sys import argv
from pathlib import Path


if __name__ == '__main__':

    filepathstr = str(argv[1]) if len(argv) > 1 else 'data/yml/markov/demo.yml'

    with open(filepathstr, 'r') as yaml_conf:
        conf = yaml.load(yaml_conf)

    Generators.markov(conf)
